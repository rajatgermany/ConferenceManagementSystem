doctype html
html(ng-app='registerform')

    head
        link(rel='stylesheet', href='/stylesheets/reviewform.css')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.2.5/angular.min.js')
        script(src='/javascripts/rajat.js')
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

            
    body(ng-controller='maincontroller',ng-init="user= #{JSON.stringify(user)}")

        ul.nav.nav-tabs
            li(role='presentation')
                a(href='http://localhost:3500/ConferenceManagement/home') Home


            li.active(role='presentation' )
                a(href='http://localhost:3500/ConferenceManagement/myprofile') {{user.Name}}
            li(role='presentation' ng-if= 'user.Author == true')
                a(href='http://localhost:3500/ConferenceManagement/author/submissions') Submissions
            li(role='presentation' ng-if= 'user.Chair == true')
                a(href='http://localhost:3500/ConferenceManagement/chair/myconferences') Myconferences

            li(role='presentation' ng-if= 'user.Chair == true')
                a(href='http://localhost:3500/ConferenceManagement/chair/makeconference') MakeConference

            li(role='presentation' ng-if= 'user.Reviewer == true')
                a(href='http://localhost:3500/ConferenceManagement/reviewer/reviewfiles') ReviewFiles

            li(role='presentation')
                a(href='http://localhost:3500/ConferenceManagement/chair/allconferences') Allconferences

            ul(class= 'nav navbar-nav navbar-right')
                li(role='presentation')
                    a(href='http://localhost:3500/ConferenceManagement/user/logout') Logout



        .container
                form.form-horizontal(name="myForm",action="/ConferenceManagement/myprofile/edit", method="post",role="form",style="max-width:600px")
                    br
                    br
                    h3 Edit My Profile
                    br

                    .form-group
                        label.col-sm-3.control-label Name
                        .col-sm-9
                            input.form-control(type="text",ng-model='user.Name',name='Title')
                            input(type="text", ng-model='user._id',name='ID',class='hidden')


                    .form-group
                        label.col-sm-3.control-label Email
                        .col-sm-9
                            input.form-control(type="text",ng-model='user.Email',name='Email')

                    .form-group
                        label.col-sm-3.control-label Phone Number
                        .col-sm-9
                            input.form-control(type="text",ng-model='user.Phone',name='Phone')

                    .form-group
                        label.col-sm-3.control-label City
                        .col-sm-9
                            input.form-control(type="text",ng-model='user.Address.City',name='City')

                    .form-group
                        label.col-sm-3.control-label Country
                        .col-sm-9
                            input.form-control(type="text",ng-model='user.Address.Country',name='Country')


                    .form-group
                        .col-sm-9.col-sm-offset-3
                            button.btn.btn-primary(type="submit", value="Edit",ng-disabled="myForm.$invalid",  name="Update") Submit









script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/core.js')







